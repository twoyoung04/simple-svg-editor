{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "target": "ES5",
    "sourceMap": true
  },
  "include": ["src/**/*"],

  "ts-node": {
    // It is faster to skip typechecking.
    // Remove if you want ts-node to do typechecking.
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
